{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Nodemon",
			"skipFiles": ["<node_internals>/**"],
			"program": "${workspaceRoot}/node_modules/nodemon/bin/nodemon.js",
			"args": ["${workspaceRoot}/server.js"],
			"runtimeArgs": ["--nolazy"]
		}
	]
}
